
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StorBookWebApp</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/aos.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
</head>
<body>

    <nav class="nav">
        <div class="nav-menu container flex-row">
            <div class="nav-brand">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray">STOR</a>
            </div>
            <div class="toggle-collapse">
                <div class="toggle-icons">
                    <i class="fas fa-bars"></i>
                </div>
            </div>
            <div class="elapse">
                <ul class="nav-items">
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    
                    <li class="nav-link">
                        <a href="#">Contact Us</a>
                    </li>
                    
                </ul>
            </div>
            <div>
                <ul class="nav-items text-gray">
                    <li class="">
                        <div class="search">
                            <div class="form-element">
                                <input type="text" class="input-element" placeholder="Find book">
                                <button class="btn form-btn">Search</button>
                            </div>
                        </div>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="Home" asp-action="Login" style="width:auto; cursor: pointer;">Login</a>
                    </li>
                    <li class="nav-link">
                        <a asp-controller="Home" asp-action="Register" style="width:auto; cursor: pointer;">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <header>
        <div class="container float-column">
            <div class="copy form-element">
                <div class="category">
                    <ul class="category-list">
                        <li class="list-items">
                            <a href="#">Hardcopy</a>
                        </li>
                        <li class="list-items" >
                            <a href="#">Softcopy</a>
                        </li>

                        <li class="list-items">
                            <a href="#">Hardcopy</a>
                        </li>
                        <li class="list-items" >
                            <a href="#">Softcopy</a>
                        </li>

                        <li class="list-items">
                            <a href="#">Hardcopy</a>
                        </li>
                        <li class="list-items" >
                            <a href="#">Softcopy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
    </header>
    

    <div class="container">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="" >
                <h2>Stor</h2>
                
            </div>
        </div>
    </footer>

    <script>
        var x=document.getElementById('login');
        var y=document.getElementById('register');
        var z=document.getElementById('btn');
        function register()
        {
            x.style.left='-400px';
            y.style.left='50px';
            z.style.left='110px';
        }
        function login()
        {
            x.style.left='50px';
            y.style.left='450px';
            z.style.left='0px';
        }
    </script>
    <script>
        var modal = document.getElementById('login-form');
        window.onclick = function(event) 
        {
            if (event.target == modal) 
            {
                modal.style.display = "none";
            }
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
