
@model StorBookWebApp.Core.MVC.LoginUserDto

@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}



<div class="back">
    <div class="center">
    <h1>Login</h1>
    <form asp-action="Login" asp-controller="Home">
    <div class="txt_field">
        <input type="email" asp-for="Email" required>
        <span></span>
        <label>Email</label>
    </div>
    <div class="txt_field">
        <input type="password" asp-for="PassWord" required>
        <span></span>
        <label>Password</label>
    </div>
    <div class="pass">Forgot Password?</div>
    <input type="submit" value="Login">
    <div class="signup_link">
        Not a member? <a asp-controller="Home" asp-action="Register">Signup</a>
    </div>
    </form>
    </div>
</div>