    <label>First Name</label>
    <input type="text" id="fname" asp-for="FirstName"  value="@user.FirstName" required>

    <label >Last Name</label>
    <input type="text" id="lname" asp-for="LastName" value="@user.LastName"  required>

    <label >Phone Number</label>
    <input type="tel" asp-for="PhoneNumber" value="@user.PhoneNumber" required>

